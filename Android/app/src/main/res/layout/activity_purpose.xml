<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".purpose"
    android:background="#ffffff">

    <TextView
        android:id="@+id/problem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problems"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/problems"
        app:layout_constraintTop_toBottomOf="@+id/problem_title"/>
    <TextView
        android:id="@+id/objective_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Objective"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/problem" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/objective"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/objective_title"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>